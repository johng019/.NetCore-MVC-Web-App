@model IEnumerable<DotNetCoreWeb_App.Models.Sentences>

@{
    ViewData["Title"] = "Index";
}

<h1>Sentences</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sentence_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.criminal_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prob_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.violations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sentence_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.criminal_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prob_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.violations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.sentence_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.sentence_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.sentence_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
