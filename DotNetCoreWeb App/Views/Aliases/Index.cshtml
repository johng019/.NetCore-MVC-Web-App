@model IEnumerable<DotNetCoreWeb_App.Models.Aliases>

@{
    ViewData["Title"] = "Index";
}

<h1>Aliases</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.alias_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.criminal_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.alias_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.criminal_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.alias_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.alias_id">Details</a> |
